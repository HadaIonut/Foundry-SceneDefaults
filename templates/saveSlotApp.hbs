<form>
  <div style="width: 500px; height: 100px" class="flex-column">

    <div class="form-group">
      <label>Your Templates:</label>
      <div class="form-fields">
        <select name="saves" id="saves">
          <option value="default">Select a template to override</option>
          {{#each saveSlots}}
            <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      </div>
    </div>

    <div class="form-group">
      <label>Template Name: </label>
      <div class="form-fields">
        <input name="saveSlotName" id="saveSlotName" type="text"/>
        <button type="submit">Save</button>
      </div>
    </div>

  </div>
</form>
